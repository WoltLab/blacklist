{
  "extends": ["tslint:recommended"],
  "rules": {
    "arrow-return-shorthand": true,
    "no-return-await": true,
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "return-undefined": true,
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "parameter",
      "arrow-parameter",
      "member-variable-declaration"
    ]
  }
}
